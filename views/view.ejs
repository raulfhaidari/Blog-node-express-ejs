<%- include("partials/header.ejs") %>

<div class="min-vh-100 ">
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="content col-lg-8 col-12 p-4">
                <h1> <%= title %></h1>
                <p> <%= content %></p>
            </div>
            <div class="content  col-lg-2 col-8 my-4 mx-4 p-4 text-center" style="height: 170px;">
                <form action="/delete" method="POST">
                    <input type="text" name="postId" hidden value="<%= postId %>">
                    <input class="btn btn-danger fs-5 bt-lg my-2 button-rad" style="width: 85%;" type="submit" name="delete" value="Delete">
                </form>
                <a href="/edit/<%= postId %>"><input class="btn btn-light fs-5 bt-lg my-2 button-rad" style="width: 85%;" type="button" value="Edit"></a>
            </div>
        </div>
    </div>
</div>

